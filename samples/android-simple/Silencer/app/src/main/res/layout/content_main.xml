<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.muflihun.silencer.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="298dp"
        android:layout_height="403dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="44dp">

        <EditText
            android:id="@+id/logMsg"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="This is message"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="102dp" />

        <Button
            android:id="@+id/logI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log(INFO)"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="173dp" />

        <Button
            android:id="@+id/logD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOG(DEBUG)"
            tools:layout_editor_absoluteX="-56dp"
            tools:layout_editor_absoluteY="125dp" />

        <Button
            android:id="@+id/logV3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOG(VERBOSE, 3)"
            tools:layout_editor_absoluteX="124dp"
            tools:layout_editor_absoluteY="250dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logger ID" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="default" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sample-app" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nonexistent" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
